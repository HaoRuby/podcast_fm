<div class="banner" id="podcast-banner">
  <h1>Discover your new favorite podcast.</h1>
</div>

<div class="cf" id="podcasts">
  <div class="wrapper">
    <ul>
      <% @podcasts.each do |podcast| %>
          <%= link_to podcast do %>
          <li>
            <img src="images/narqua.png" alt="Narqual Podcast">
            <div class="podcast-overview">
            <h2><%= podcast.title %></h2>
              <p class="episode-count">1 Episode</p>
            </div>
          </li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="pagination">
    <span class="previous_page disable">Previous</span> 
    <em class="current">1</em>
    <a href="#">2</a>
    <a href="#" class="next_page">Next</a>
</div>