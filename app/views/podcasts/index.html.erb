<div class="banner" id="podcast-banner">
  <h1>Discover your new favorite podcast.</h1>
</div>

<div class="cf" id="podcasts">
  <div class="wrapper">
    <ul>
      <% @podcasts.each do |podcast| %>
          <%= link_to podcast do %>
          <li>
            <%= image_tag podcast.thumbnail.url(:medium) %>
            <div class="podcast-overview">
            <h2><%= podcast.title %></h2>
              <p class="episode-count"><%= podcast.episodes.count %> Episode</p>
            </div>
          </li>
          <% end %>
      <% end %>
    </ul>
  </div>
</div>
<%= will_paginate @podcasts, previous_label: "Previous", next_label: "Next" %>

