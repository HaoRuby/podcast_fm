<div id="form">
  <div class="wrapper-skinny">
    <%= form_for([@podcast, @episode]) do |f|  %>
      <%= f.label :title %><br>
      <%= f.text_field :title %> <br><br>

      <%= f.label :description %><br>
      <%= f.text_area :description %> <br><br>

      <%= f.label :episode_thumbnail %><br>
      <%= f.file_field :episode_thumbnail %> <br><br>

      <%= f.submit 'Save', class: 'button button-highlight button-block' %>
    <% end %>
  </div>
</div>