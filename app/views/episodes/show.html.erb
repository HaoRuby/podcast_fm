<div id="podcast-show">
  <%= render partial: 'share/podcast_show_head' %>
  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
      All Podcasts
      <span>/</span>
      <%= link_to @podcast.title, @podcast %>
      <span>/</span>
      <%= @episode.title %>
    <% end %>
  </div>


  <div id="episode-content">
    <div class="wrapper-skinny">
      <img src="image/episode.png" alt="episode" class="current-episode-thumnail">
      <h2><%= @episode.title %></h2>
      <p class="description">
        <%= @episode.description %>
      </p>
    </div>
  </div>

  <div id="episodes">
    <div class="wrapper-skinny">
      <ul class="cf">
        <% @episodes.each do |episode| %>
          <li class="cf">
            <div class="episode-thumbnail">
              <%= link_to podcast_episode_path(@podcast, episode) do %>
                <img src="image/podcast.png" alt="podcast">
              <% end %>
            </div>
            <div class="episode-overview">
              <h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
              <p class="description">
                <%= truncate(episode.description, length: 150) %>
              </p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>